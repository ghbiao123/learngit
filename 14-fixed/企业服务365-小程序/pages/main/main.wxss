/* pages/main/main.wxss */
.header{
  height: 210rpx;
  padding: 0 20rpx;
}
.header-cont{
  display: flex;
  align-items: center;
  height: 210rpx;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userinfo{
  width: 400rpx;
  text-indent: 20rpx;
  line-height: 2;
}
.user-name{
  font-size: 36rpx;
}
.user-phone{
  font-size: 28rpx;
  color: #999999;
}
.login{
  padding: 0;
  margin: 0;
  text-align: left;
  font-size: 36rpx;
  font-weight: 500;
  background-color: #fff;
}
.user-detail{
  width: 180rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  color: #4F93D0;
  border: 1rpx solid #4F93D0;
  border-radius: 32rpx;
}
.user-detail-hover{
  background: #4F93D0;
  color: #fff;
}

.userorder{
  padding: 30rpx 20rpx;
}
.userorder-title{
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  line-height: 48rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}
.userorder-all{
  display: flex;
  justify-content: flex-end;
  color: #CCCCCC;
  font-size: 26rpx;
}
.all-icon{
  margin-top: 12rpx;
  width: 23rpx;
  height: 23rpx;
}

.order-sort{
  padding: 10rpx 30rpx 0;
  display: flex;
  justify-content: space-between;
}
.sort-item{
  width: 110rpx;
  text-align: center;
  color: #666666;
  font-size: 26rpx;
  line-height: 1.5;
}
.sort-item-hover{
    background: #f5f5f5;
}
.sort-icon{
  width: 64rpx;
  height: 64rpx;
}
.sort-name{
  padding-top: 10rpx;
}