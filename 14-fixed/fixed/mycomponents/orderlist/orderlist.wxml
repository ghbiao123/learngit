<view class="content">
  <view class="list" wx:for="{{list}}" wx:key="index">
    <view class="cont">
      <view class="list-head">
        <view>订单号：{{item.ordernum}}</view>
        <view wx:if="{{item.status == 15}}" class="color-blue">已申请</view>
        <view wx:if="{{item.status == 25}}" class="color-red">合同确认</view>
        <view wx:if="{{item.status == 30}}" class="color-gray">已预付款</view>
        <view wx:if="{{item.status == 45}}" class="color-blue">维修中</view>
        <view wx:if="{{item.status == 50}}" class="color-green">维修完成</view>
        <view wx:if="{{item.status == 55}}" class="color-blue">已付余款</view>
        <view wx:if="{{item.status == 65}}" class="color-yellow">订单完成</view>
        <view wx:if="{{item.status == 0}}" class="color-gray">已取消</view>
      </view>

      <view class="list-cont">
        <view class="cont-item">
          <view class="cont-left">项目名称：{{item.order_name}}</view>
          <view class="cont-right">维修师傅：{{item.shifu || '***'}}</view>
        </view>
        <view class="cont-item">
          <view class="cont-left">预付款：{{item.yf_price || '***'}}</view>
          <view class="cont-right">尾款：{{item.wk_price || '***'}}</view>
        </view>
        <view class="cont-item">下单时间：{{item.createtime}}</view>
      </view>

      <view class="list-foot" data-id="{{item.id}}" bindtap="getDetail">
        <btn type="detail">查看详情</btn>
      </view>

    </view>
  </view>
</view>