/* pages/orderdetail/orderdetail.wxss */
.order-tip{
  display: flex;
  align-items:center;
  padding: 0 20rpx;
  height: 46rpx;
  background-color: #F5F5F5;
}
.tip-icon{
  width: 24rpx;
  height: 24rpx;
}
.tip-text{
  text-indent: 20rpx;
  font-size: 24rpx;
  color: #CCCCCC;
}
.order-status{
  padding: 30rpx 0 0;
  height: 120rpx;
  display: flex;
  justify-content: center;
}

.cell-cont{
  padding: 30rpx 20rpx;
}
.cell-cont-title{
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #333;
}

.cell-cont-item{
  display: flex;
  min-height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}
.cell-key{
  color: #999999;
}
.cell-val{
  display: flex;
  flex-wrap: wrap;
  max-width: 600rpx;
  text-indent: 20rpx;
  color: #333;
}
.cell-image{
  margin: 0 15rpx 20rpx;
  width: 120rpx;
  height: 120rpx;
}
