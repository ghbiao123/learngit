/* pages/list/list.wxss */
.time {
  padding: 32rpx 0 12rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
}

.list {
  position: relative;
  margin: 20rpx auto 0;
  width: 684rpx;
  height: 190rpx;
  text-indent: 35rpx;
  border-radius: 40rpx;
  background-color: #fff;
  overflow: hidden;
}

.tieminfo {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-family: PingFang HK-Medium, PingFang HK;
  font-weight: 500;
  color: #8D959A;
  line-height: 50rpx;
}

.detail {
  font-size: 32rpx;
  font-family: PingFang HK-Semibold, PingFang HK;
  font-weight: 600;
  color: #494E51;
  line-height: 60rpx;
}

.local {
  font-size: 24rpx;
  font-family: PingFang HK-Regular, PingFang HK;
  font-weight: 400;
  color: #8D959A;
  line-height: 50rpx;
}
.icon {
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  width: 144rpx;
  height: 144rpx;
}