.banner{
  width: 100%;
  height: 320rpx;
}
.banner-bg{
  width: 100%;
  height: 165rpx;
  background-color: #F2B454;
}
.banner-swiper{
  margin: -165rpx auto 0;
  display: block;
  width: 710rpx;
  height: 320rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.banner-image,
.banner-swiper-item{
  width: 710rpx;
  height: 320rpx;
}

.notice{
  display: flex;
  height: 75rpx;
  line-height: 75rpx;
  overflow: hidden;
}
.notice-tit{
  margin: 18rpx 20rpx 0 20rpx;
  width: 64rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  color: #F2B454;
  border: 1rpx solid #F2B454;
}

.notice-swiper,
.notice-swiper-item{
  width: 600rpx;
  height: 75rpx;
}

/* .cell-card{
  
} */
.hot-title{
  font-size: 32rpx;
  font-weight: bold
}
.hot-line{
  width: 64rpx;
  height: 6rpx;
  background: #F2B454;
}

.content{
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0 0;
  width: 670rpx;
}
.content-left,
content-right{
  width: 320rpx;
}

.goods{
  width: 320rpx;
  line-height: 1.5;
  padding-bottom: 20rpx;
}
.goods-image{
  width: 320rpx;
  height: 320rpx;
}
.goods-name{
  font-size: 28rpx;
}
.goods-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 2;
  vertical-align: middle;
}

.f-s-24{
  font-size: 24rpx;
}
.goods-sale{
  color: #CCCCCC;
  font-size: 24rpx;
}
.goods-price{
  color: #EA1313;
  font-size: 36rpx;
}






