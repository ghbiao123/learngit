/* pages/goodsinfo/goodsinfo.wxss */
.container{
  padding-bottom: 98rpx;
}
.swiper,
.swiper-item,
.swiper-image{
  width: 750rpx;
  height: 450rpx;
}
.cell-card{
  position: relative;
  margin-top: -50rpx;
}
.goods-info{
  width: 510rpx;
  height: 180rpx;
}
.goods-name{
  width: 670rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.goods-introduce{
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  line-height: 30rpx;
  max-height: 60rpx;
  color: #999999;
  overflow: hidden;
}
.goods-sale-info{
  display: flex;
  align-items: center;
  line-height: 2;
  vertical-align: middle;
}

.f-s-24{
  font-size: 24rpx;
}
.goods-sale{
  color: #CCCCCC;
  font-size: 24rpx;
}
.goods-price{
  color: #EA1313;
  font-size: 36rpx;
}
.ellipsis-text{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.share{
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  top: 84rpx;
  right: 0;
  padding: 0;
  width: 120rpx !important;
  height: 48rpx;
  font-weight: normal;
  font-size: 24rpx;
  color: #999999;
  background: #F5F5F5;
  border-radius: 40rpx 0 0 40rpx;
}
.share-icon{
  width: 30rpx;
  height: 30rpx;
}


.btn-box{
  position: fixed;
  bottom: 0;
  display: flex;
  width: 750rpx;
  height: 98rpx;
  background: #fff;
}
.bg-white,
.bg-orange{
  display: flex;
  align-items: center;
  width: 375rpx;
  height: 98rpx;
}
.bg-white{
  justify-content: space-around;
}
.bg-orange{
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  background: #F2B454;
}
.pay-icon{
  width: 40rpx;
  height: 40rpx;
}






.contact-btn{
  padding: 0;
  margin: 0 !important;
  width: 120rpx !important;
  font-weight: normal;
  background: transparent;
}