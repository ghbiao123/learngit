.list-box{
  width: 100%;
  background: #fff;
}
.list{
  display: flex;
  justify-content: space-between;
  width: 710rpx;
  height: 180rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.goods-image{
  width: 180rpx;
  height: 180rpx;
}
.goods-info{
  width: 510rpx;
  height: 180rpx;
}
.goods-name{
  width: 510rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.goods-introduce{
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  line-height: 30rpx;
  height: 60rpx;
  color: #999999;
  overflow: hidden;
}
.goods-sale-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 2;
  vertical-align: middle;
}

.f-s-24{
  font-size: 24rpx;
}
.goods-sale{
  color: #CCCCCC;
  font-size: 24rpx;
}
.goods-price{
  color: #EA1313;
  font-size: 36rpx;
}
.ellipsis-text{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.gray-hover{
  background: #f5f5f5 !important;
}