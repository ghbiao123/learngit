.prompt-box{
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 100vh;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
}
.prompt{
  position: absolute;
  top: 355rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  padding: 20rpx;
  width: 500rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.title{
  margin-top: 10rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}
.input-box{
  margin-top: 20rpx;
  display: flex;
  font-size: 40rpx;
  line-height: 1.5;
  border-bottom: 1rpx solid #f5f5f5;
}
.input{
  margin: 10rpx 0 0 20rpx;
  text-align: left;
  font-size: 30rpx;
  height: 45rpx;
  width: 450rpx;
  line-height: 45rpx;
}
.button{
  margin-top: 20rpx;
  width: 180rpx !important;
  color: #fff;
  font-weight: normal;
  background-color: #C1402A;
}
.cancel{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}