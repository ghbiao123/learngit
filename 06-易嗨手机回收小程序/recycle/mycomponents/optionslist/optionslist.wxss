/* 白色卡片 */
.scroll{
  width: 750rpx;
}
.cont{
  padding-bottom: 20rpx;
}
.cell-card{
  margin: 20rpx auto 0;
  width: 670rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.tit-no-bg{
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  width: 710rpx;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.tit-no-bg-selected{
  border-bottom: 1rpx solid #ccc;
}

.title-selected{
  display: flex;
  color: #999;
  font-size: 24rpx;
  font-weight: normal;
}
.title-selected-value{
  padding-right: 20rpx;
  max-width: 200rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.title-selected-change{
  padding-top: 15rpx;
}
.change-btn{
  padding: 5rpx 10rpx;
  height: 35rpx;
  line-height: 35rpx;
  border: 1rpx solid #999;
  border-radius: 5rpx;
}

.radio{
  display: block;
  line-height: 75rpx;
  padding: 10rpx 0;
}

 .wx-checkbox-input {
  border-radius: 50%;
}
/*checkbox选中后样式  */
 .wx-checkbox-input.wx-checkbox-input-checked {
  background: #C7402C;
}
/*checkbox选中后图标样式  */
 .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}