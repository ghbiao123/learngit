.order-list{
  margin: 20rpx auto 0;
  padding: 20rpx;
  width: 670rpx;
  height: auto;
  background-color: #fff;
  border-radius: 20rpx;
}

.title{
  font-size: 30rpx;
  font-weight: bold;
  line-height: 2;
}

.project{
  display: flex;
  width: 670rpx;
  height: auto;
}

.project-image{
  width: 170rpx;
  height: 170rpx;
  text-align: center;
}
.image{
  width: 140rpx;
  height: 140rpx;
}
.project-info{
  width: 500rpx;
}

.project-name{
  display: flex;
  justify-content: space-between;
  line-height: 1.5;
}

.name{
  font-size: 30rpx;
  font-weight: bold;
}

.state{
  font-size: 20rpx;
}

.state-red{
  color: #EB2323;
}
.state-green{
  color: #0CC540;
}
.state-gray{
  color: #949494;
}

.info{
  padding: 5rpx 0;
  font-size: 24rpx;
  color: #929292;
  line-height: 1.5;
}


.order-info{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.order-info-name{
  color: #929292;
}
.order-info-cont{
  display: flex;
}

.copy{
  margin: 0 10rpx;
  width: 70rpx;
  height: 36rpx;
  line-height: 34rpx;
  text-align: center;
  border: 1rpx solid #000000;
  border-radius: 10rpx;
}
.projec-hover{
  background-color: #f5f5f5 !important;
}

.btn-hover{
  background-color: #fcd3d3 !important;
}


.cell-item{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #606060;
  border-bottom: 1rpx solid #f5f5f5;
}
.cell-item:last-child{
  border: none;
}

.express-icon{
  margin: 36rpx 20rpx 0 0;
  width: 25rpx;
  height: 25rpx;
}

.order-input{
  margin-left: 20rpx;
  width: 485rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.scan-icon{
  margin-top: 35rpx;
   width: 30rpx;
   height: 30rpx;
}

.button-clear{
  padding: 0;
  width: 470rpx !important;
  height: 75rpx;
  line-height: 75rpx;
  color: #fff;
  font-weight: normal;
  background-color: #C1402A;
  border-radius: 10rpx;
}