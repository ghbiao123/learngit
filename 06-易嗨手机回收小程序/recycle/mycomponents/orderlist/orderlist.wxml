<block wx:for="{{list}}" wx:key="index">
  <view class="order-list">
    <view class="title">机器信息</view>
    <view class="project" data-id="index" bindtap="getDetail">
      <view class="project-image">
        <image class="image" src="/images/a.jpg" mode="widthFix"></image>
      </view>
      <view class="project-info">
        <view class="project-name">
          <view class="name">机器名称</view>
          <view class="state {{status==0?'state-red':''}}{{status==1?'state-green':''}}{{status==2?'state-gray':''}}">
            {{status==0?'待发货':''}}{{status==1?'已完成':''}}{{status==2?'已取消':''}}
          </view>
        </view>
        <view class="info ellipsis-text">全网速，64G，国行，三网通，过，三网通，过，三网通，过保或保修期...</view>
        <view class="info">预估价：¥1041</view>
      </view>
    </view>
    <view class="title">订单信息</view>
    <view class="order">
      <view class="order-info">
        <view class="order-info-name">订单编号：</view>
        <view>
          <view class="order-info-cont">
            <text>12865525668894720</text>
            <view class="copy" data-text="12865525668894720" bindtap="copyText">复制</view>
          </view>
        </view>
      </view>
      <view class="order-info">
        <view class="order-info-name">下单时间：</view>
        <view class="order-info-cont">2020年8月4日14:55:44</view>
      </view>
    </view>
  </view>
</block>