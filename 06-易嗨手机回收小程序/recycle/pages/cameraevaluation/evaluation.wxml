<view class="container">
  <view class="content">

    <view class="head">
      <view class="progress">
        {{progressData.chose}}/{{progressData.all}}
        <view class="progress-s" style="width:{{progress}};"></view>
      </view>
      <!-- <image mode="aspectFit" class="image" src="{{_data.image}}"></image> -->
