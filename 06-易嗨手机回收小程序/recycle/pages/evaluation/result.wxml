<view class="container">

	<view class="head">
		<view class="price">
			<text style="font-size:35rpx;">￥</text>
			<text style="font-size:65rpx;">12345</text>
			<text style="font-size:25rpx; color: #262626; padding-left: 40rpx; vertical-align: middle;">预计下周下跌￥12345</text>
			<image style="width: 17rpx; margin-left:5rpx; vertical-align: middle;" mode="widthFix" src="/images/down.png"></image>
			<text style="font-size: 24rpx; padding-left: 60rpx; color: #2693FF; ">重新询价</text>
		</view>
		<view class="calc-price">
			<view class="triangle"></view>
			<view>
				<view class="prev-price">本机预估价</view>
				<view class="prev-price-item">1975</view>
			</view>
			<image class="plus" src="/images/plus.png"></image>
			<view>
				<view class="prev-price">是否使用增价卷</view>
				<view class="prev-price-item">1975</view>
			</view>

		</view>
	</view>

	<view class="pick m-t-20">
		<view class="btn-box">
			<view bindtap="getSelected" data-id="0" class="btn {{selected==0?'btn-s':''}}">门店回收</view>
			<view bindtap="getSelected" data-id="1" class="btn {{selected==1?'btn-s':''}}">上门回收</view>
			<view bindtap="getSelected" data-id="2" class="btn {{selected==2?'btn-s':''}}">快递回收</view>
		</view>
		<view class="content m-t-20">
			<!-- 门店回收 -->
			<view class="cont" hidden="{{!(selected==0)}}">
				<radio-group>
					<view class="radios" wx:for="index" wx:key="index">
						<view>
							<label>淄博印象汇店</label>
						</view>
						<view>
							<image class="phone" src="/images/phone.png"></image>
							<radio color="#C7402C"></radio>
						</view>
					</view>
				</radio-group>
				<view class="radios">
					<view>预约时间：</view>
					<view>
						<text>2020-07-22 10:00</text>
						<text class="color-b">修改</text>
					</view>
				</view>
			</view>
			<!-- 上门回收 -->
			<view class="cont" hidden="{{!(selected==1)}}">

      
      </view>
			<!-- 快递回收 -->
			<view class="cont" hidden="{{!(selected==2)}}"></view>
		</view>
	</view>

	<view class="button">
		<button class="button-clear m-t-20">立即回收</button>
	</view>
</view>