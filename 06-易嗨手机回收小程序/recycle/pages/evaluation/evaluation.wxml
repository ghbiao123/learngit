<view class="container">
  <view class="content">
    
    <view class="head">
      <view class="progress">
        {{progressData.chose}}/{{progressData.all}}
        <view class="progress-s" style="width:{{progress}};"></view>
      </view>
      <image class="image" src="/images/a.jpg"></image>
      <view class="name">华为 P30</view>
    </view>

    <view class="cont">

      <block wx:for="{{arrList}}" wx:key="index">
        <view class="tit-no-bg">
          {{index+1}}标题1
        </view>
        <view class="cell-card">
          <radio-group data-id="{{index}}" bindchange="radioChange">
              <radio wx:for="{{item}}" wx:key="index" wx:for-item="itm" wx:for-index="idx" class="radio" color="#C7402C" value="{{itm}}">{{itm}}</radio>
          </radio-group>
        </view>
      </block>

    </view>

    <view class="button">
      <button bindtap="getResult" class="button-clear m-t-20">估价</button>
    </view>

  </view>
</view>