/* pages/evaluation/evaluation.wxss */

.content{
  padding: 270rpx 0 125rpx;
}

.head{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 270rpx;
  text-align: center;
  background-color: #fff;
}
.progress{
  position: relative;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 25rpx;
}
.progress-s{
  position: absolute;
  left: 0;
  top: 0;
  width: 10%;
  height: 30rpx;
  z-index: -1;
  background-color: #C7402C;
}
.image{
  margin-top: 20rpx;
  width: 100rpx;
  height: 100rpx;
}
.name{
  font-size: 35rpx;
  line-height: 2;
}
.cell-card{
  margin-top: 0rpx;
}
.radio{
  display: block;
  height: 75rpx;
}


.button{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 125rpx;
  background-color: #fff;
}