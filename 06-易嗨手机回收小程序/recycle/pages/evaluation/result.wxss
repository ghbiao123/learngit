/* pages/evaluation/result.wxss */
.head{
  width: 100%;
  height: 270rpx;
  background-color: #fff;
}
.price{
  padding: 0 30rpx;
  height: 105rpx;
}

.calc-price{
  display: flex;
  justify-content: space-around;
  margin: 30rpx auto 0;
  position: relative;
  width: 690rpx;
  height: 120rpx;
  color: #fff;
  background-color: #C7402C;
  border-radius: 10rpx;
}
.triangle{
  position: absolute;
  left: 100rpx;
  top: -10rpx;
  width: 0;
  height: 0;
  border-top: 0rpx solid rgba(0, 0, 0, 0);
  border-left: 10rpx solid rgba(0, 0, 0, 0);
  border-right: 10rpx solid rgba(0, 0, 0, 0);
  border-bottom: 10rpx solid #C7402C;
}
.prev-price{
  padding-top: 12rpx;
  font-size: 24rpx;
}
.prev-price-item{
  font-size: 40rpx;
}
.plus{
  margin-top: 47rpx;
  width: 25rpx;
  height: 25rpx;
}

.pick{
  padding: 20rpx 30rpx 20rpx;
  background-color: #fff;
}
.btn-box{
  display: flex;
  width: 690rpx;
  height:  65rpx;
  text-align: center;
  line-height:  65rpx;
  border: 1rpx solid #C7402C;
  border-radius: 10rpx;
  overflow: hidden;
}
.btn{
  width: 345rpx;
  /* width: 230rpx; */
}
.btn-s{
  background-color: #C7402C;
  color: #fff;
}

.btn:nth-child(1){
  width: 344rpx;
  /* width: 228rpx; */
  border-left: 1rpx solid #C7402C;
  /* border-right: 1rpx solid #C7402C; */
}
.content{
  margin: 0 auto;
  width: 690rpx;
  height: auto;
}
/* .cont{} */

.radios{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}
.pick-input{
  height: 80rpx;
  line-height: 80rpx;
  width: 240rpx;
}
.phone{
  margin: 28rpx 20rpx 0 0;
  width: 28rpx;
  height: 28rpx;
}
.color-b{
  color: #009CFF;
  padding-left: 20rpx;
}
.input{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.text-tip{
  font-size: 24rpx;
  color: #9A9A9A;
}


.button{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 130rpx;
  background-color: #fff;
}