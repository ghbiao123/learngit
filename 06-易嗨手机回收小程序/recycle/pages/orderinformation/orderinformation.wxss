/* pages/orderinformation/orderinformation.wxss */
.notes{
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 40rpx;
  color: #C7402C;
  background-color: #F9EBE9;
}
.notes-icon{
  margin: 35rpx;
  width: 30rpx;
}
.notes-text{
  padding: 10rpx 20rpx 0 0;
  font-size: 24rpx;
}
.getsuccess{
  width: 100%;
  height: 440rpx;
  text-align: center;
  background-color: #fff;
}
.success-icon{
  margin-top: 40rpx;
  width: 120rpx;
  height: 120rpx;
}
.success-cont{
  font-size: 30rpx;
  color: #333333;
}
.color-au{
  color: #D18C13;
}
.success-tips{
  color: #333333;
  font-size: 26rpx;
}

.orderinfo{
  width: 100%;
  height: auto;
  padding: 5rpx 0 20rpx;
  background-color: #fff;
}
.orderinfo-title{
  margin: 20rpx 0 30rpx 20rpx;
  height: 45rpx;
  text-indent: 20rpx;
  font-size: 30rpx;
  border-left: 4rpx solid #C7402C;
}
.orderinfo-content{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #333333;
}
.orderinfo-name{
  text-align: center;
  width: 200rpx;
}
.orderinfo-cont{
  font-weight: bold;
}
.color-red{
  color: #C7402C;
}

.prepare{
  margin: 20rpx auto;
  width: 660rpx;
  height: 90rpx;
  display: flex;
}
.prepare-image{
  width: 140rpx;
  height: 90rpx;
}
.prepare-cont{
  line-height: 90rpx;
  text-indent: 20rpx;
  font-size: 26rpx;
}