/* pages/order/orderdetail.wxss */
.head{
  width: 750rpx;
  height: 270rpx;
  overflow: hidden;
  background-color: #C7402C;
}

.step{
  display: flex;
  justify-content: space-between;
  position: relative;
  margin: 35rpx auto 0;
  width: 620rpx;
  height: auto;
}
.line{
  position: absolute;
  left: 25rpx;
  top: 34rpx;
  z-index: 1;
  width: 570rpx;
  height: 1rpx;
  background-color:  #f5f5f5;
}
.step-item{
  position: relative;
  z-index: 2;
  width: 120rpx;
  text-align: center;
}
.step-image{
  margin: 0 auto;
  width: 70rpx;
  height: 70rpx;
  border: 1rpx solid #fff;
  border-radius: 50%;
  overflow: hidden;
  background-color: #C7402C;
}
.step-image-s{
  background-color: #fff;
}
.icon{
  display: block;
  margin: 20rpx auto 0;
  width: 30rpx;
  height: 30rpx;
}
.step-name{
  padding: 20rpx 0 0;
  font-size: 24rpx;
  color: #fff;
}

.express{
  margin-top: -80rpx;
}

.cell-item{
  justify-content: flex-start;
  color: #000000;
}

.express-icon{
  margin: 36rpx 20rpx 0 0;
  width: 25rpx;
  height: 25rpx;
}
.express-add-name{
  display: flex;
  justify-content: space-between;
  width: 600rpx;
  font-size: 24rpx;
  line-height: 50rpx;
}
.copy{
  margin-top: 10rpx;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  text-align: center;
  border: 1rpx solid #000;
  border-radius: 10rpx;
}

.express-address{
  width: 600rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  color: #888888;
}
.order-input{
  margin-left: 20rpx;
  width: 410rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.scan-icon{
  margin-top: 35rpx;
   width: 30rpx;
   height: 30rpx;
}
.project-info{
  display: flex;
  width: 670rpx;
}

.project-image{
  width: 170rpx;
  height: 170rpx;
}
.info{
  margin-left: 20rpx;
  width: 480rpx;
}

.state{
  font-size: 24rpx;
}

.state-red{
  color: #EB2323;
}
.state-green{
  color: #0CC540;
}
.state-gray{
  color: #949494;
}


.name{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 1.5;
}

.msg{
  width: 480rpx;
  font-size: 24rpx;
  color: #888888;
  line-height: 2;
}
.order-info{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.order-name{
  color: #929292;
}
.order-value{
  display: flex;
}

.button{
  display: flex;
  justify-content: space-around;
  padding-top: 25rpx;
  width: 100%;
  height: 105rpx;
  background-color: #fff;
}

.btn{
  margin: 0;
  padding: 0;
  width: 300rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: normal;
  border-radius: 40rpx;
}

.btn:nth-child(1){
  color: #a0a0a0;
  background-color: #fff;
  border: 1rpx solid #a0a0a0;
}
.btn:nth-child(2){
  color: #fff;
  border: 1rpx solid #C7402C;
  background-color: #C7402C;
}
.container{
  padding-bottom: 0;
}