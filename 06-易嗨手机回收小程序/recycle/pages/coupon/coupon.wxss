/* 页面新样式 */
/* .container{} */
.head,
.head-bg {
  width: 750rpx;
  height: 320rpx;
  overflow: hidden;
}

.head {
  position: relative;
  z-index: -1;
  color: #fff;
  text-indent: 20rpx;
}

.head-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -2;
}

.head-title {
  padding-top: 80rpx;
  font-size: 52rpx;
}

.head-tip {
  font-size: 24rpx;
}

.content {
  margin: -70rpx auto 0;
  width: 708rpx;
  height: auto;
  background: #fff;
  border-radius: 20rpx;
  /* overflow: hidden; */
}

.tab {
  display: flex;
  justify-content: space-around;
  width: 708rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
}

.tab-item {
  position: relative;
  width: 236rpx;
  height: 70rpx;
  font-size: 26rpx;
  color: #999999;
  border-bottom: 3rpx solid #f5f5f5;
}

.tab-item:nth-child(1) {
  z-index: 2;
}
.tab-item:nth-child(1)::after{
  content: '';
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  background: lavender;
  transform: perspective(0.5em) scale(1, 1.2) rotateX(2deg);
  transform-origin: bottom left;
  border-radius: 5px;
  background-image: linear-gradient(to bottom, royalblue 0, #fff 100%);
}
.tab-item:nth-child(2) {
  background-color: rosybrown;
}

.tab-item:nth-child(3) {
  background-color: saddlebrown;
}

.tab-selected {
  font-size: 30rpx;
  color: #C7402C;
  font-weight: bold;
  border-bottom: none;
}

.b-r {
  border-right: 3rpx solid #f5f5f5;
}

.b-r-l {
  border-left: 3rpx solid #f5f5f5;
  border-right: 3rpx solid #f5f5f5;
}

.b-l {
  border-left: 3rpx solid #f5f5f5;
}

.tab-cont {
  margin: 0 auto;
  width: 670rpx;
  height: auto;
}

.coupon-status {
  width: 100%;
  height: 115rpx;
  text-align: center;
  border-bottom: 2rpx solid #f5f5f5;
}

.notes {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  line-height: 120rpx;
}

.check-coupon {
  margin: 0 auto;
  width: 240rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 30rpx;
  border: 1rpx solid #999;
  border-radius: 38rpx;
}

.chose-coupon {
  margin: 30rpx auto;
  border: 1rpx solid #C7402C;
  color: #C7402C;
}

.chose-hover {
  background-color: #C7402C;
  color: #fff;
}

.check-hover {
  background-color: #f5f5f5;
}

.morewel {
  line-height: 90rpx;
  font-size: 30rpx;
}