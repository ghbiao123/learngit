/* pages/mine/mine.wxss */

.userinfo{
  display: flex;
  padding-top: 45rpx;
  width: 100%;
  height: 145rpx;
  background-color: #fff;
}

.avatar{
  margin-left: 80rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}
.name{
  padding-left: 20rpx;
  width: 330rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.staff-login{
  text-align: center;
}

.staff-icon{
  width: 36rpx;
  height: 36rpx;
}
.staff-info{
  color: #7A7A7A;
  font-size: 24rpx;
}

.order-step{
  display: flex;
  justify-content: space-between;
}
.order-step-item{
  text-align: center;
}
.order-icon{
  margin-top: 20rpx;
  width: 45rpx;
  height: 45rpx;
}
.order-name{
  padding: 20rpx 0;
  font-size: 24rpx;
}

.contact{
  margin: 0 auto;
  padding: 0;
  font-weight: normal;
  height: 100rpx;
  background-color: #fff;
  border-radius: 0rpx;
  width: 670rpx !important;
}