.banner{
  position: relative;
  width: 750rpx;
  height: 280rpx;
}

.banner-bg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 750rpx;
}

.banner-swiper,
.banner-swiper-item,
.banner-image{
  margin: 0 auto;
  width: 710rpx;
  height: 280rpx;
  border-radius: 20rpx;
  overflow: hidden;
}


.add-price{
  margin: 0 auto;
  width: 670rpx;
  height: 150rpx;
}

.types{
  display: flex;
  justify-content: space-between;
}
.types-item{
  width: 115rpx;
  height: 200rpx;
}
.types-icon{
  width: 115rpx;
  height: 90rpx;
}
.types-name{
  padding-top: 10rpx;
  color: #000;
  font-size: 24rpx;
}

.steps{
  display: flex;
  justify-content: space-between;
}
.steps-item{
  width: 120rpx;
  height: 120rpx;
  text-align: center;
}
.steps-icon{
  width: 50rpx;
  height: 50rpx;
}
.steps-name{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666666;
}
.rt{
  width: 12rpx;
  height: 120rpx;
}
.rt-icon{
  margin-top: 16rpx;
  width: 12rpx;
  height: 21rpx;
}

.fire{
  margin: 15rpx 10rpx 0 0;
  width: 35rpx;
  height: 45rpx;
}

.scroll-view{
  width: 750rpx;
  height: 370prx;
}

.scroll-content{
  display: flex;
  padding-right: 20rpx;
  min-width: 750rpx;
  height: 370rpx;
}

.scroll-item{
  margin-left: 20rpx;
  width: 270rpx;
  height: 370rpx;
  border-radius: 20rpx;
  overflow: hidden;
  text-align: center;
  background-color: #fff;
}
.scroll-image{
  margin-top: 30rpx;
  width: 220rpx;
  height: 130rpx;
}
.name{
  font-size: 30rpx;
}

.price{
  color: #F74444;
  font-size: 40rpx;
  line-height: 88rpx;
}
.max-price{
  font-size: 25rpx;
}