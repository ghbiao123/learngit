/* pages/evaluation/result.wxss */
.container {
  padding-bottom: 125rpx;
}

.head {
  width: 100%;
  height: 270rpx;
  background-color: #fff;
}

.price {
  padding: 0 30rpx;
  height: 105rpx;
}

.calc-price {
  display: flex;
  justify-content: space-around;
  margin: 30rpx auto 0;
  position: relative;
  width: 690rpx;
  height: 120rpx;
  color: #fff;
  background-color: #C7402C;
  border-radius: 10rpx;
}

.triangle {
  position: absolute;
  left: 100rpx;
  top: -10rpx;
  width: 0;
  height: 0;
  border-top: 0rpx solid rgba(0, 0, 0, 0);
  border-left: 10rpx solid rgba(0, 0, 0, 0);
  border-right: 10rpx solid rgba(0, 0, 0, 0);
  border-bottom: 10rpx solid #C7402C;
}

.prev-price {
  padding-top: 12rpx;
  font-size: 24rpx;
}

.prev-price-item {
  font-size: 40rpx;
}

.prev-price-value {
  display: flex;
}

.prev-price-radio {
  margin: 14rpx 0 0 45rpx;
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  overflow: hidden;
}

.prev-price-radio-icon {
  display: block;
  margin: 6rpx auto 0;
  width: 18rpx;
}



.plus {
  margin-top: 47rpx;
  width: 25rpx;
  height: 25rpx;
}

.pick {
  padding: 20rpx 30rpx 20rpx;
  background-color: #fff;
}

.btn-box {
  display: flex;
  width: 690rpx;
  height: 65rpx;
  text-align: center;
  line-height: 65rpx;
  border: 1rpx solid #C7402C;
  border-radius: 10rpx;
  overflow: hidden;
}

.btn {
  width: 345rpx;
  /* width: 230rpx; */
}

.btn-s {
  background-color: #C7402C;
  color: #fff;
}

.btn:nth-child(1) {
  width: 344rpx;
  /* width: 228rpx; */
  border-left: 1rpx solid #C7402C;
  /* border-right: 1rpx solid #C7402C; */
}

.content {
  margin: 0 auto;
  width: 690rpx;
  height: auto;
}

/* .cont{} */

.radios {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}

.radios-input {
  border-radius: 10rpx;
  background-color: #f5f5f5;
}

.radios-picker-icon {
  margin: 30rpx 20rpx 0 0;
  width: 10rpx;
}

.pick-input {
  height: 80rpx;
  line-height: 80rpx;
  width: 240rpx;
}

.phone {
  margin: 28rpx 20rpx 0 0;
  width: 28rpx;
  height: 28rpx;
}

.color-b {
  color: #009CFF;
  padding-left: 20rpx;
}

.freight {
  border: 1rpx solid #009CFF;
  width: 185rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #009CFF;
}

.input {
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #707070;
}

.text-tip {
  font-size: 24rpx;
  color: #9A9A9A;
}


.button {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 150rpx;
  z-index: 999;
  background-color: #fff;
}

.using-userinfo {
  color: #707070 !important;
}

.region{
  width: 200rpx;
}