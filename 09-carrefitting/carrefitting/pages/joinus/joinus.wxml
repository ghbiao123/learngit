<view class="container">
  <form bindsubmit="submit">
    <view class="title">姓名</view>
    <input name="name" class="input" value="{{resetTxt}}" placeholder="请输入姓名"></input>
    <view class="title">电话</view>
    <input name="phone" class="input" value="{{resetTxt}}" placeholder="请输入电话"></input>
    <view class="title">留言</view>
    <textarea name="message" class="textarea" value="{{resetTxt}}" placeholder="请输入您的需求"></textarea>
    <button class="button-clear" form-type="submit">提交</button>
  </form>
</view>
