/* pages/list/list.wxss */
@import "./font/iconfont.wxss";
page{
  background-color: #f5f5f5;
}
.container{
  padding-top: 100rpx;
}
.search-box{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 888;
  /* padding: 0 20rpx; */
  display: flex;
  justify-content: space-between;
  width: 750rpx;
  height: 100rpx;
  background-color: #3DC3F5;
}

.search-input{
  display: flex;
  margin: 18rpx 0 0 20rpx;
  width: 630rpx;
  height: 64rpx;
  border-radius: 32rpx;
  overflow: hidden;
  background-color: #fff;
}

.search-icon{
  margin: 12rpx 0 0 16rpx;
}

.input{
  margin-left: 5rpx;
  width: 530rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
}

.filter-image{
  margin: 25rpx 20rpx 0 0;
  width: 50rpx;
  height: 50rpx;
  vertical-align: top;
}

.list{
  margin: 20rpx auto 0;
  padding: 20rpx;
  width: 670rpx;
  height: auto;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.title{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.content{
  line-height: 1.5;
  font-size: 30rpx;
  color: #999999;
}

.more{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
}
.color-b{
  color: #3DC3F5;
}

/* filter */
.filter-box{
  position: fixed;
  bottom: 0rpx;
  left: 750rpx;
  z-index: 999;
  width: 750rpx;
  background-color: rgba(0, 0, 0, 0.7);
  overflow: hidden;
}

.filter-content{
  overflow: hidden;
  background-color: #fff;
}

.filter-cont-position{
  margin: 20rpx auto 0;
  width: 710rpx;
}
.filter-title{
  font-size: 30rpx;
  line-height: 1.5;
}

.d-f-w{
  width: 710rpx;
  display: flex;
  flex-wrap: wrap;
}

.kind{
  margin: 10rpx 5rpx 0 6rpx;
  width: 167rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: #666666;
  font-size: 26rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
}

.kind-s{
  color: #fff;
  background-color: #3DC3F5;
}

.input-area-box{
  margin-top: 10rpx;
  width: 710rpx;
  height: 84rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
}
.input-area{
  margin-left: 20rpx;
  width: 670rpx;
  height: 84rpx;
  line-height: 84rpx;
}

.range-box{
  margin-top: 10rpx;
  width: 320rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background-color: #F5F5F5;
  border-radius: 10rpx;
}
.range-input{
  margin-left: 20rpx;
  width: 280rpx;
  height: 64rpx;
  line-height: 64rpx;
}
.line{
  margin: 40rpx 15rpx 0;
  width: 40rpx;
  height: 2rpx;
  background-color: #999999;
}

.btn-box{
  padding-top: 20rpx;
  width: 750rpx;
  display: flex;
}
.button{
  margin: 0;
  padding: 0;
  font-weight: normal;
  width: 375rpx !important;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
  border-top: 1rpx solid #ccc;
  border-radius: 0;
}
.button:nth-child(1){
  color: #fff;
  background-color: #3DC3F5;
}
/* #999999 */

.button:nth-child(2){
  color: #999999;
  background-color: #fff;
}